<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/welcomeSign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wlod_wka_v1_0"
            android:textSize="40dp"
            android:textAlignment="center"
            android:paddingTop="0px"
            android:padding="26dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.177"
            android:layout_marginTop="0dp"
            android:layout_marginStart="0dp"
            app:layout_constraintStart_toStartOf="parent"/>


    <android.support.v7.widget.RecyclerView android:id="@+id/recyclerView"
                                            android:layout_width="0dp"

                                            android:layout_height="675dp"
                                            android:layout_marginTop="16dp"
                                            app:layout_constraintBottom_toBottomOf="parent"
                                            app:layout_constraintRight_toRightOf="parent"
                                            app:layout_constraintLeft_toLeftOf="parent"
                                            app:layout_constraintHorizontal_bias="0.0"
                                            app:layout_constraintTop_toBottomOf="@+id/button"
                                            app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="@string/przegl_daj_zrzutki"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="clickZrzutka"
            android:id="@+id/button"
            app:layout_constraintTop_toBottomOf="@+id/welcomeSign" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"/>
    <Button
            android:text="@string/kliknij_pajacyka"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="clickPajacyk"
            android:id="@+id/button2"
            app:layout_constraintTop_toBottomOf="@+id/welcomeSign" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/button"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.608"/>

</android.support.constraint.ConstraintLayout>